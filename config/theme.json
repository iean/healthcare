{
  "colors": {
    "default": {
      "text_color": {
        "default": "#5a2671",
        "light": "#7a4b91",
        "dark": "#2e1540"
      },
      "theme_color": {
        "primary": "#b9892f",
        "secondary": "#5a2671",
        "body": "#ffffff",
        "border": "#e0e0e0",
        "theme_light": "#f9f7fc"
      }
    }
  },
  "fonts": {
    "font_size": {
      "base": "16px",
      "scale": "1.25"
    },
    "font_family": {
      "primary": "Poppins:wght@400;500;600;700",
      "primary_type": "sans-serif",
      "secondary": "Open+Sans:wght@400;600",
      "secondary_type": "sans-serif"
    }
  },
  "layout": {
    "container": {
      "max_width": "1200px",
      "padding": "1.5rem"
    },
    "breakpoints": {
      "sm": "540px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  "buttons": {
    "default": {
      "padding": "12px 24px",
      "border_radius": "9999px",
      "font_weight": "600",
      "text_transform": "none"
    },
    "primary": {
      "background_color": "#b9892f",
      "text_color": "#ffffff",
      "hover_background": "#a87a28"
    },
    "secondary": {
      "background_color": "#5a2671",
      "text_color": "#ffffff",
      "hover_background": "#4c1f5e"
    }
  }
}
